<%= form_for([@article, @article.comments.build]) do |f| %>
  <div class="title-input">
    <%= f.label :commenter, "お名前" %><br>
    <%= f.text_field :commenter %>
  </div>
  <div class="content-input">
    <%= f.label :body, "コメント" %><br>
    <%= f.text_area :body %>
  </div>
  <div class="submit">
    <%= f.submit "送信", class: "button" %>
  </div>
<% end %>
