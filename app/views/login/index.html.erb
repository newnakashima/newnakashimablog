<h1>ログイン</h1>
<% if session[:logged_out] %>
  <h2>ログアウトしました</h2>
  <% session[:logged_out] = nil %>
<% end%>
<%= form_tag('/login', :method => :post) do %>
  <div>
    <%= label_tag(:name, "User name") %><br>
    <%= text_field_tag(:name) %>
  </div>
  <div>
    <%= label_tag(:pass, "Password") %><br>
    <%= password_field_tag(:pass) %>
  </div>
  <div>
    <%= submit_tag "送信", class: "button" %>
  </div>
<% end %>
