<%= form_for @article do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "errors") %> 入力値に誤りがあります。
      </h2>
      <ul>
        <%= @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="title-input">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: "article_title" %>
  </div>

  <div class="content-input">
    <%= f.label :text %><br>
    <%= f.text_area :text, class: "article_text" %>
  </div>

  <div class="checkbox">
    <%= f.label :private %>: <%= f.check_box :private %>
  </div>

  <div class="submit">
    <%= f.submit "作成", class: "button" %>
  </div>

<% end %>
