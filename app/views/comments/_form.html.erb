<%= form_for([@article, @article.comments.build]) do |f| %>
  <div class="title-input">
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </div>
  <div class="content-input">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <div class="submit">
    <%= f.submit %>
  </div>
<% end %>
